reference(todo: TodoStore)
property(placeholder: string)

- var item: TodoItemData = {id: 0, text: '', marked: false}

input(
  class={
      'edit': item.id > 0,
      'new-todo': item.id == 0
  }
  type='text'
  placeholder=placeholder
  autoFocus=true
  value=item.text
  onChange = function(e) {
      item.text = e.target.value.trim();
  }
  onBlur=function(e) {
      item.text = e.target.value.trim();
  }
  onKeyDown = handleSubmit
)
script.
